{
  "manifest_version": 2,
  "name": "Zabbix Voice Alerter",
  "version": "1.1.0",
  "description": "Powiadomienia głosowe dla alertów Zabbix z własnym dźwiękiem i syntezą mowy",
  "author": "Your Name",
  
  "permissions": [
    "storage",
    "tabs"
  ],
  
  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*/zabbix.php?action=problem.view*",
        "http://*/zabbix.php?action=problem.view*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "zabbix-voice-alerter@example.com",
      "strict_min_version": "91.0"
    }
  }
}
